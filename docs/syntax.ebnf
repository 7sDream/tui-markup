items = { item };

item
= text
| element
;

text = char, { char };

char
= normal char
| escaped char
;

normal char = ? any unicode character ? - '\' - '<' - '>';

escaped char
= "\\"
| "\<"
| "\>"
;

element = '<', tags, ' ', items, '>';

tags = tag, { ',', tag };

tag
= [ [ "fg" | "bg" ], ':' ], color
| [ "mod", ':' ], midifier
| custom-tag
;

char for tag =
| (? alphanumberic character ?)
| '+' | '-' | ':'
;

color = { char for tag - '?' };

midifier = { char for tag - '?' };

(* Please read generator's document for real color and modifier they supports *)

custom-tag = { char-for-tag };
