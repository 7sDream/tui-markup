color
= "black"
| "red"
| "green"
| "yellow"
| "blue"
| "magenta" | "purple"
| "cyan"
| "white"
| index color
| rgb color
;

(* xterm-256 color chart index *)
index color = ? number 0 to 255 ?;

rgb color = 6 * hex digit;

hex digit
= (? '0' to '9' ?)
| (? 'a' to 'z' ?)
| (? 'A' to 'Z' ?)
;

